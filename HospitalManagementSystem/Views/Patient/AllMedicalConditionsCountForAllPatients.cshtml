@model List<HospitalManagementSystem.ViewModels.PatientMedicalConditionCountViewModel>

<h3>All Medical Conditions Count for All Patients</h3>

<table class="table">
    <thead>
        <tr>
            <th>Patient ID</th>
            <th>First Name</th>
            <th>Medical Condition</th>
            <th>Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PatientId</td>
                <td>@item.FirstName</td>
                <td>@item.MedicalCondition</td>
                <td>@item.Count</td>
            </tr>
        }
    </tbody>
</table>
